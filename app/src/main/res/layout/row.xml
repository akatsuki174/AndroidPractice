<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardElevation="4dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <View android:id="@+id/purpleView"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:background="#E5CCFF"/>
        <View android:id="@+id/blueView"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:layout_marginTop="8dp"
              android:background="#1DD4F9"/>
        <View android:id="@+id/greenView"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:layout_marginTop="8dp"
              android:background="#9AF91D"/>
        <View android:id="@+id/yellowView"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:layout_marginTop="8dp"
              android:background="#F9CD1D"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
